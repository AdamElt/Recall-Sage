<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudyFragment">


    <TextView
        android:id="@+id/studyTitle"
        android:layout_width="222dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:text="@string/study"
        android:textSize="20pt"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/study_question"
        android:layout_width="365dp"
        android:layout_height="139dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text=""
        android:textSize="17pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/study_answer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studyTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/study_answer"
        android:layout_width="365dp"
        android:layout_height="141dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:hint="@string/studyAnswerHint"
        android:text=""
        android:textSize="17pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studyTitle"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/study_finish"
        android:layout_width="203dp"
        android:layout_height="82dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:text="@string/finish"
        android:textSize="18pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/study_next"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/study_question"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/study_next"
        android:layout_width="203dp"
        android:layout_height="82dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/next"
        android:textSize="20pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/study_answer"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>